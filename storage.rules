rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para archivos de programas
    match /programs/{allPaths=**} {
      // Permitir lectura a todos los usuarios autenticados
      allow read: if request.auth != null;
      
      // Permitir escritura solo a usuarios autenticados
      allow write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024 // Máximo 10MB
        && request.resource.contentType.matches('image/.*'); // Solo imágenes
    }
    
    // Reglas para archivos de lecciones (videos e imágenes)
    match /lessons/{allPaths=**} {
      allow read: if request.auth != null;
      
      allow write: if request.auth != null
        && (
          // Para videos: máximo 500MB
          (request.resource.contentType.matches('video/.*') && request.resource.size < 500 * 1024 * 1024)
          ||
          // Para imágenes: máximo 5MB
          (request.resource.contentType.matches('image/.*') && request.resource.size < 5 * 1024 * 1024)
        );
    }
    
    // Reglas para avatares de usuario
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // Máximo 5MB
        && request.resource.contentType.matches('image/.*'); // Solo imágenes
    }
    
    // Reglas para archivos temporales
    match /temp/{allPaths=**} {
      allow read, write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024; // Máximo 10MB
    }
    
    // Reglas para archivos de backup (solo administradores)
    match /backups/{allPaths=**} {
      allow read, write: if request.auth != null; // Por ahora, cualquier usuario autenticado
      // En producción, implementar verificación de roles de administrador
    }
  }
}
